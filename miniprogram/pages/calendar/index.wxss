/* pages/calendar/index.wxss */
.calendarTile {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fdf8cd;
  padding: 30rpx;
}
.title {
  display: flex;
  align-items: center;
}
.today {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #5fc79a;
  border: 1px solid #fff;
  border-radius: 50%;
  font-size: 26rpx;
}
.date {
  font-size: 40rpx;
  font-weight: 600;
}
.year-status {
  margin-left: 16rpx;
  font-size: 24rpx;
}
.status-suc {
  color: #5fc79a;
}
.status-fail {
  color: #f08080;
}
.punchList {
  padding-left: 30rpx;
}
.punchList__content {
  display: flex;
  align-items: center;
}
.punchList__content-main {
  margin-left: 30rpx;
  font-size: 28rpx;
}

.comment {
  color: #aeaaaa;
}
.punchList__title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.punchList__title > view {
  margin-left: 20rpx;
  font-size: 36rpx;
}
.circle {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #000;
  margin: 0 25rpx;
}
