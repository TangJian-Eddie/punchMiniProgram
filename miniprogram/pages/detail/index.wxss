/* pages/detail/index.wxss */
.container {
  position: relative;
  width: 90vw;
  height: 90vh;
  margin: 5vh 5vw;
}
.punchGoalCard {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 16rpx 20rpx;
}
.punchGoalCard__content {
  display: flex;
  align-items: center;
}
.punchGoalCard__content-information {
  margin-left: 20rpx;
}
.punchGoalCard__content-count {
  color: #aaaaaa;
}
.punchButton {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #2fc4ff;
  border-radius: 35rpx;
}
.time{
  display: flex;
  justify-content: space-between;
}
.button {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  color: #fff;
  background-color: #ffc01a;
  border-radius: 30rpx;
}
