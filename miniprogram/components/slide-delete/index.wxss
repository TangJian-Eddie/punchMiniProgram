.wrap {
  position: relative;
}
.wrap .content {
  position: relative;
  background: #fff;
  z-index: 1;
}
.wrap .content.animate {
  transition: transform 0.3s;
}
.wrap .action-wrap {
  position: absolute;
  width: 300rpx;
  top: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .action {
  display: flex;
  width: 150rpx;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.wrap .action text {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}
.del {
  background: #fe6d6d;
}
.edit {
  background: #ffc920;
}
